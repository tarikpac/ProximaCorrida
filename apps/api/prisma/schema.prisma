// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Event {
  id          String   @id @default(uuid())
  title       String
  date        DateTime
  city        String
  state       String   @default("PB")
  distances   String[]
  location    String?
  organizer   String?
  imageUrl    String?
  price       String?
  regLink     String
  sourceUrl   String   @unique
  
  // Scraper Expansion Fields
  sourcePlatform String   @default("corridasemaratonas")
  sourceEventId  String?
  rawLocation    String?
  priceText      String?
  priceMin       Decimal?

  scrapedAt   DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([sourcePlatform, sourceEventId])

  // Soft Deletion / Archiving
  isActive    Boolean  @default(true)
  archivedAt  DateTime?
}

model PushSubscription {
  id               String   @id @default(uuid())
  endpoint         String   @unique
  keys             Json
  statePreferences String[]
  userAgent        String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
